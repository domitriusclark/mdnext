{
  "name": "nextjs-mdx",
  "description": "This example shows using [MDX](https://github.com/mdx-js/mdx) content inside your NextJS app w/ Frontmatter & layouts thanks to next-mdx-enhanced.",
  "version": "1.0.1",
  "repository": "https://github.com/domitriusclark/nextjs-mdx.git",
  "author": "domitriusclark",
  "main": "next.config.js",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "start": "next start",
    "format": "yarn format:index && yarn format:pages && yarn format:src",
    "format:index": "prettier --write \"*.{js,json,md}\"",
    "format:pages": "prettier --write \"pages/**/*.js\"",
    "format:src": "prettier --write \"src/**/*.{js,md,mdx}\""
  },
  "dependencies": {
    "@chakra-ui/core": "^1.0.0-next.4",
    "@chakra-ui/theme": "^1.0.0-next.4",
    "fast-glob": "^3.2.4",
    "fuse.js": "^6.4.1",
    "gray-matter": "^4.0.2",
    "js-cookie": "^2.2.1",
    "next": "^9.5.2",
    "next-cookies": "^2.0.3",
    "next-mdx-remote": "^0.6.0",
    "next-seo": "^4.7.3",
    "prism-react-renderer": "^1.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "use-cloudinary": "^3.1.5"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "pages/**/*.js": [
      "prettier --write"
    ],
    "src/**/*.{js,md,mdx}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "keywords": [
    "nextjs",
    "mdx"
  ],
  "license": "ISC"
}
