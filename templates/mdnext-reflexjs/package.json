{
  "name": "mdnext-reflexjs",
  "starter-name": "mdnext-reflexjs",
  "description": "Nextjs, MDX and Reflexjs.",
  "version": "0.0.1",
  "repository": "https://github.com/domitriusclark/mdnext.git",
  "author": "arshad",
  "main": "next.config.js",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "start": "next start",
    "test": "jest",
    "format": "yarn format:index && yarn format:pages && yarn format:src",
    "format:index": "prettier --write \"*.{js,json,md}\"",
    "format:pages": "prettier --write \"pages/**/*.{js,ts}\"",
    "format:src": "prettier --write \"src/**/*.{js,ts,md,mdx}\""
  },
  "dependencies": {
    "copy-to-clipboard": "^3.3.1",
    "fast-glob": "^3.2.4",
    "fuse.js": "^6.4.3",
    "github-slugger": "^1.3.0",
    "gray-matter": "^4.0.2",
    "next": "^11.1.0",
    "next-mdx-remote": "^1.0.0",
    "next-seo": "^4.17.0",
    "prism-react-renderer": "^1.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "reading-time": "^1.2.0",
    "reflexjs": "^1.0.0-alpha.7"
  },
  "devDependencies": {
    "@types/node": "^14.14.8",
    "@types/react": "^16.9.56",
    "hasha": "^5.2.2",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.2.11",
    "node-cache": "^5.1.2",
    "prettier": "^2.0.5",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testMatch": [
      "**/tests/*.{js,ts,tsx}"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/fixtures/",
      "/.cache/",
      "/dist/"
    ]
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "pages/**/*.js": [
      "prettier --write"
    ],
    "src/**/*.{js,md,mdx}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "keywords": [
    "nextjs",
    "mdx"
  ],
  "license": "ISC"
}
